;--------------------------------------------------------------------------------------------

   .macro PUSH var
        DEC SP
        INDEXEDWR var SP
    .endm

;--------------------------------------------------------------------------------------------

    .macro POP var
        INDEXEDRD SP var
        INC SP
    .endm

;--------------------------------------------------------------------------------------------

  .macro CALL addr
        PUSH @ra
        JMP addr
@ra:    .data $+1
    .endm

;--------------------------------------------------------------------------------------------

    .macro RET
        POP @j
        .data 0,0
@j:     .data 0x555555
    .endm

